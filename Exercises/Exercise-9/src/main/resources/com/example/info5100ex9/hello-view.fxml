<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="301.0" prefWidth="414.0" spacing="20.0" style="-fx-background-color: #8789C0;" xmlns:fx="http://javafx.com/fxml"  fx:controller="com.example.info5100ex9.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Five Function Calculator" textFill="#45f0d0">
            <font>
                <Font name="System Italic" size="18.0" />
            </font>
        </Label>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="24.0">
                    <children>
                        <Label style="-fx-padding: 3px;" text="First Number" textAlignment="CENTER" textFill="#45f0d0">
                            <font>
                                <Font name="Avenger Book" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="number1"/>
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="16.0">
                    <children>
                        <Label style="-fx-padding: 3px;" text="Second Number" textFill="#45f0d0" />
                        <TextField fx:id="number2"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="6.0">
            <children>
                <Button mnemonicParsing="false" style="-fx-background-color: #111d4a;" text="Multiply" textFill="#c2cae8" fx:id="multiply" onAction="#onOperationClick"/>
                <Button mnemonicParsing="false" style="-fx-background-color: #111d4a;" text="Modulus" textFill="#c2cae8" fx:id="modulus" onAction="#onOperationClick"/>
                <Button contentDisplay="CENTER" mnemonicParsing="false"  style="-fx-background-color: #111d4a; -fx-margin: 5px;" text="Add" textFill="#c2cae8" fx:id="add" onAction="#onOperationClick"/>
                <Button mnemonicParsing="false" style="-fx-background-color: #111d4a;" text="Subtract" textAlignment="CENTER" textFill="#c2cae8" fx:id="subtract" onAction="#onOperationClick"/>
                <Button mnemonicParsing="false" style="-fx-background-color: #111d4a;" text="Divide" textFill="#c2cae8" fx:id="divide" onAction="#onOperationClick"/>
            </children>
        </HBox>
        <Label  textFill="#111d4a" fx:id="answer"/>
        <Button mnemonicParsing="false" style="-fx-background-color: #111d4a;" text="Reset" textFill="#c2cae8" fx:id ="reset" onAction="#onReset"/>
    </children>
</VBox>
